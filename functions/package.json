{
  "name": "aura-functions",
  "version": "1.0.0",
  "description": "AURA - Intelligent Assistant Cloud Functions",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && npx firebase emulators:start --only functions,firestore --project demo-aura-hackathon",
    "shell": "npm run build && npx firebase functions:shell --project demo-aura-hackathon",
    "start": "npm run shell",
    "deploy": "npx firebase deploy --only functions",
    "logs": "npx firebase functions:log",
    "test": "jest"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "firebase-functions-test": "^3.3.0",
    "firebase-tools": "^13.30.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "private": true
}