{
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ],
            "predeploy": [
                "npm --prefix \"$RESOURCE_DIR\" run build"
            ]
        }
    ],
    "hosting": {
        "public": "frontend/dist/frontend/browser",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "emulators": {
        "functions": {
            "host": "127.0.0.1",
            "port": 5001
        },
        "firestore": {
            "host": "127.0.0.1",
            "port": 8080
        },
        "hosting": {
            "host": "127.0.0.1",
            "port": 5000
        },
        "ui": {
            "enabled": true,
            "host": "127.0.0.1"
        },
        "singleProjectMode": true
    }
}